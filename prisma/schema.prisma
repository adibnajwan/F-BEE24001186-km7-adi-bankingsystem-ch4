
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  accounts Account[]
  profile  Profile?
}

model Account {
  id         Int      @id @default(autoincrement())
  balance    Float
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  transactions Transaction[]
}

model Profile {
  id      Int    @id @default(autoincrement())
  bio     String?
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}