generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  password         String    // Tambahkan atribut untuk menyimpan password
  resetPasswordToken String? // Token untuk reset password
  resetTokenExpiry DateTime? // Waktu kedaluwarsa token
  accounts         Account[]
  profile          Profile?

  @@map("users")
}

model Account {
  id         Int      @id @default(autoincrement())
  balance    Float
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  accountNumber String
  transactionsFrom Transaction[] @relation(name: "FromAccount")
  transactionsTo   Transaction[] @relation(name: "ToAccount")

  @@map("accounts") 
}

model Profile {
  id      Int    @id @default(autoincrement())
  bio     String?
  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique

  @@map("profiles") 
}

model Transaction {
  id            Int      @id @default(autoincrement())
  amount        Float
  from          Account  @relation(name: "FromAccount", fields: [fromAccountId], references: [id])
  fromAccountId Int
  to            Account  @relation(name: "ToAccount", fields: [toAccountId], references: [id])
  toAccountId   Int

  @@map("transactions") 
}

model Image {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  url         String
  createdAt   DateTime @default(now())

  @@map("image") 
}