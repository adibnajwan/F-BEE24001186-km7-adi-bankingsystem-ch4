generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  accounts Account[]
  profile  Profile?

  @@map("users") 
}

model Account {
  id         Int      @id @default(autoincrement())
  balance    Float
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  accountNumber String
  transactionsFrom Transaction[] @relation(name: "FromAccount")
  transactionsTo   Transaction[] @relation(name: "ToAccount")

  @@map("accounts") 
}

model Profile {
  id      Int    @id @default(autoincrement())
  bio     String?
  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique

  @@map("profiles") 
}

model Transaction {
  id            Int      @id @default(autoincrement())
  amount        Float
  from          Account  @relation(name: "FromAccount", fields: [fromAccountId], references: [id])
  fromAccountId Int
  to            Account  @relation(name: "ToAccount", fields: [toAccountId], references: [id])
  toAccountId   Int

  @@map("transactions") 
}
